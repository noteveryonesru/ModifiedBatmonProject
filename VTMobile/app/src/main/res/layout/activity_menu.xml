<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="5dp"
    tools:context=".activities.MenuActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#0077be "
        android:orientation="vertical"
        android:padding="20dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Operation"
            android:textSize="20dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="2">

            <TextView
                android:id="@+id/latitudeTextView"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="2dp"
                android:layout_weight="1"
                android:background="#77dd77 "
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:text="Latitude\n0.0"
                android:textAlignment="center" />

            <TextView
                android:id="@+id/longitudeTextView"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="2dp"
                android:layout_weight="1"
                android:background="#77dd77 "
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:text="Longitude\n0.0"
                android:textAlignment="center" />
        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="4dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="2">

            <TextView
                android:id="@+id/speedTextView"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="2dp"
                android:layout_weight="1"
                android:background="#77dd77 "
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:text="Speed\n0.0"
                android:textAlignment="center" />

            <TextView
                android:id="@+id/headingTextView"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="2dp"
                android:layout_weight="1"
                android:background="#77dd77 "
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:text="Heading\n0.0"
                android:textAlignment="center" />
        </LinearLayout>

        <Button
            android:id="@+id/deployButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Deploy" />

        <Button
            android:id="@+id/retrieveButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Retrieve" />

        <Button
            android:id="@+id/waypointButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Set Waypoint"
            android:visibility="gone" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="#0077be "
        android:orientation="vertical"
        android:padding="20dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sync Data"
            android:textSize="20dp" />

        <Button
            android:id="@+id/syncButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Sync" />
    </LinearLayout>

</LinearLayout>